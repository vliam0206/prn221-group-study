<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"] - GroupStudy</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RazorPageWebApp.styles.css" asp-append-version="true" />
    <link href="
        https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css
        " rel="stylesheet">
</head>
<body>
    <header class="p-2 border-bottom">
        <div class="container">
            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                <a asp-area="" asp-page="/Index" class="logo d-flex align-items-center mb-2 mb-lg-0 text-dark text-decoration-none">
                    GroupStudy
                </a>

                <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                    <li><a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a></li>
                    <li><a class="nav-link text-dark" asp-area="" asp-page="/Community">Community</a></li>
                </ul>
 
                <div>
                    <a asp-page="/Auth/Login" class="nav-link text-secondary">Login</a>
                </div>
            </div>
        </div>
    </header>


    <div>
        @RenderBody()
    </div>

    <footer class="d-flex flex-wrap justify-content-between align-items-center border-top py-3 px-5">
        <p class="col-md-4 mb-0 text-muted">&copy; 2023 - Group Study</p>

        @*<a asp-area="" asp-page="/Index" class="logo d-flex align-items-center mb-2 mb-lg-0 text-dark text-decoration-none">
        GroupStudy</a>*@

        <ul class="nav col-md-4 justify-content-end">
            <li class="nav-item"><a asp-page="/Index" class="nav-link px-2 text-muted">Home</a></li>
            <li class="nav-item"><a href="#" class="nav-link px-2 text-muted">Features</a></li>
            <li class="nav-item"><a href="#" class="nav-link px-2 text-muted">Pricing</a></li>
            <li class="nav-item"><a href="#" class="nav-link px-2 text-muted">FAQs</a></li>
            <li class="nav-item"><a href="#" class="nav-link px-2 text-muted">About</a></li>
        </ul>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
