@page
@model RazorPageWebApp.Pages.Auth.LoginModel
@{
}
<div class="row">
    <h1 class="display-4">Login</h1>
    <div class="col-md-4">
        <form method="post">
            <div class="form-group mb-3">
                <label asp-for="@Model.AccountObj.Username" class="form-label">Username</label>
                <input asp-for="@Model.AccountObj.Username" class="form-control" type="text" />
                <span asp-validation-for="@Model.AccountObj.Username" class="text-danger form-text"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="@Model.AccountObj.Password" class="form-label">Password</label>
                <input asp-for="@Model.AccountObj.Password" class="form-control" type="password" />
                <span asp-validation-for="@Model.AccountObj.Password" class="text-danger form-text"></span>
            </div>
            <div class="form-group mb-3">
                <input type="submit" class="btn btn-light btn-outline-primary" value="Login" />
            </div>
        </form>
    </div>
    <a asp-page="./Register" class="link-primary mb-5">Not have account? Register</a>
</div>
<p class="text-danger">@Model.Message</p>
