@page
@model RazorPageWebApp.Pages.Auth.RegisterModel
<h1 class="display-4">Register</h1>
@{
    if (Model.IsValid!.Value)
    {
        <p class="text-success">@Model.Message</p>
    }
    else
    {
        <p class="text-danger">@Model.Message</p>
    }
}
<div asp-validation-summary="All" class="text-danger"></div>
<div class="row">    
    <div class="col-md-4">
        <form method="post">
            <div class="form-group mb-3">
                <label asp-for="@Model.AccountObj.Username" class="form-label">User name</label>
                <input asp-for="@Model.AccountObj.Username" class="form-control" type="text" />
                <span asp-validation-for="@Model.AccountObj.Username" class="text-danger form-text"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="@Model.AccountObj.Password" class="form-label">Password</label>
                <input asp-for="@Model.AccountObj.Password" class="form-control" type="password" />
                <span asp-validation-for="@Model.AccountObj.Password" class="text-danger form-text"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="@Model.AccountObj.ConfirmPassword" class="form-label">Confirm assword</label>
                <input asp-for="@Model.AccountObj.ConfirmPassword" class="form-control" type="password" />
                <span asp-validation-for="@Model.AccountObj.ConfirmPassword" class="text-danger form-text"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="@Model.AccountObj.Email" class="form-label">Email</label>
                <input asp-for="@Model.AccountObj.Email" class="form-control" type="email" />
                <span asp-validation-for="@Model.AccountObj.Email" class="text-danger form-text"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="@Model.AccountObj.FirstName" class="form-label">First Name</label>
                <input asp-for="@Model.AccountObj.FirstName" class="form-control" type="text" />
                <span asp-validation-for="@Model.AccountObj.FirstName" class="text-danger form-text"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="@Model.AccountObj.LastName" class="form-label">Last Name</label>
                <input asp-for="@Model.AccountObj.LastName" class="form-control" type="text" />
                <span asp-validation-for="@Model.AccountObj.LastName" class="text-danger form-text"></span>
            </div>
            <div class="form-group mb-3">
                <input type="submit" class="btn btn-light" value="Register" />
            </div>
        </form>
    </div>
    <a asp-page="./Login" class="link-primary mb-5">Already have account? Login</a>
</div>
