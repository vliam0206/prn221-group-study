@page
@model RazorPageWebApp.Pages.Groups.MembersModel
@{
    ViewData["Title"] = "Members";
    Layout = "_LayoutUser";
}
@inject IHttpContextAccessor httpContext
@{
    var username = httpContext.HttpContext?.Session?.GetString(AppConstants.USER_NAME);
}
<head>
    @*Add Template relative links*@
    <link rel="apple-touch-icon" sizes="76x76" href="~/assets/img/apple-icon.png">
    <link rel="icon" type="image/png" href="~/assets/img/favicon.png">
    <!--     Fonts and icons     -->
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700,900|Roboto+Slab:400,700" />
    <!-- Nucleo Icons -->
    <link href="~/assets/css/nucleo-icons.css" rel="stylesheet" />
    <link href="~/assets/css/nucleo-svg.css" rel="stylesheet" />
    <!-- Font Awesome Icons -->
    <script src="https://kit.fontawesome.com/42d5adcbca.js" crossorigin="anonymous"></script>
    <!-- Material Icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Round" rel="stylesheet">
    <!-- CSS Files -->
    <link id="pagestyle" href="~/assets/css/material-dashboard.css?v=3.0.0" rel="stylesheet" />
    @*End Add Template relative links*@
</head>

<div class="row d-flex justify-content-center">
    <!-- Left side bar -->
    <div class="col-3 position-relative sidenav navbar navbar-vertical navbar-expand-xs border-0 border-radius-xl my-3 bg-gradient-dark ">
        <!-- Sidenav Header -->
        <div class="sidenav-header">
            <i class="fas fa-times p-3 cursor-pointer text-white end-0 top-0 d-none d-xl-none" aria-hidden="true"></i>
            <a class="navbar-brand m-0" href=" https://demos.creative-tim.com/material-dashboard/pages/dashboard " target="_blank">
                <img src="~/assets/img/logo-ct.png" class="navbar-brand-img h-100" alt="main_logo">
                <span class="ms-1 font-weight-bold text-white">@Model.GroupObj.Name</span>
            </a>
        </div>
        <!-- End Sidenav Header -->
        <hr class="horizontal light mt-0 mb-2">
        <!-- Sidenav Main -->
        <div class="collapse navbar-collapse w-auto max-height-vh-100 ps">
            <ul class="navbar-nav">
                <!-- Dashboard Item -->
                <li class="nav-item">
                    <a asp-page="/Groups/AdminGroupSetting" asp-route-id="@Model.GroupObj.Id" class="nav-link text-white">
                        <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="material-icons opacity-10">dashboard</i>
                        </div>
                        <span class="nav-link-text ms-1">Dashboard</span>
                    </a>
                </li>
                <!-- End Dashboard Item -->
                <!-- All Posts Item -->
                <li class="nav-item">
                    <a asp-page="/Groups/AllPosts" asp-route-groupId="@Model.GroupObj.Id" class="nav-link text-white ">
                        <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="material-icons opacity-10">receipt_long</i>
                        </div>
                        <span class="nav-link-text ms-1">All Posts</span>
                    </a>
                </li>
                <!-- End All Posts Item -->
                <!-- Notification Item -->
                <li class="nav-item">
                    <a class="nav-link text-white " href="#">
                        <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="material-icons opacity-10">notifications</i>
                        </div>
                        <span class="nav-link-text ms-1">Notifications</span>
                    </a>
                </li>
                <!-- End Notification Item -->
                <!-- Members Item -->
                <li class="nav-item">
                    <a class="nav-link text-white ">
                        <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="material-icons opacity-10">person</i>
                        </div>
                        <span class="nav-link-text ms-1">Members</span>
                    </a>
                </li>
                <!-- End Members Item -->


            </ul>
            <div class="ps__rail-x" style="left: 0px; bottom: 0px;"><div class="ps__thumb-x" tabindex="0" style="left: 0px; width: 0px;"></div></div><div class="ps__rail-y" style="top: 0px; right: 0px;"><div class="ps__thumb-y" tabindex="0" style="top: 0px; height: 0px;"></div></div><div class="ps__rail-x" style="left: 0px; bottom: 0px;"><div class="ps__thumb-x" tabindex="0" style="left: 0px; width: 0px;"></div></div><div class="ps__rail-y" style="top: 0px; right: 0px;"><div class="ps__thumb-y" tabindex="0" style="top: 0px; height: 0px;"></div></div><div class="ps__rail-x" style="left: 0px; bottom: 0px;"><div class="ps__thumb-x" tabindex="0" style="left: 0px; width: 0px;"></div></div><div class="ps__rail-y" style="top: 0px; right: 0px;"><div class="ps__thumb-y" tabindex="0" style="top: 0px; height: 0px;"></div></div>
        </div>
        <!-- End Sidenav Main -->

        <div class="ps__rail-x" style="left: 0px; bottom: 0px;"><div class="ps__thumb-x" tabindex="0" style="left: 0px; width: 0px;"></div></div><div class="ps__rail-y" style="top: 0px; right: 0px;"><div class="ps__thumb-y" tabindex="0" style="top: 0px; height: 0px;"></div></div><div class="ps__rail-x" style="left: 0px; bottom: 0px;"><div class="ps__thumb-x" tabindex="0" style="left: 0px; width: 0px;"></div></div><div class="ps__rail-y" style="top: 0px; right: 0px;"><div class="ps__thumb-y" tabindex="0" style="top: 0px; height: 0px;"></div></div><div class="ps__rail-x" style="left: 0px; bottom: 0px;"><div class="ps__thumb-x" tabindex="0" style="left: 0px; width: 0px;"></div></div><div class="ps__rail-y" style="top: 0px; right: 0px;"><div class="ps__thumb-y" tabindex="0" style="top: 0px; height: 0px;"></div></div>
    </div>
    <!-- End Left Sidebar-->
    <!-- Right Part-->
    <div class="col-9 main-content position-relative max-height-vh-100 my-3 ps ps--active-y ps--scrolling-y">
        <div class="container-fluid">
            <!-- Header Background -->
            <div class="page-header min-height-300 border-radius-xl" style="background-image: url('https://images.unsplash.com/photo-1531512073830-ba890ca4eba2?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&amp;ixlib=rb-1.2.1&amp;auto=format&amp;fit=crop&amp;w=1920&amp;q=80');">
                <span class="mask  bg-gradient-primary  opacity-6"></span>
            </div>
            <!-- End Header Background -->
            <!-- Main Part -->
            <div class="card card-body mx-3 mx-md-4 mt-n6">
                <!-- Title Info -->
                <div class="row gx-4 mb-2">
                    <!-- Group Title -->
                    <div class="col-auto my-auto">
                        <div class="h-100">
                            <h5 class="mb-1">All Members</h5>
                        </div>
                    </div>
                    <!-- End Group Title -->
                    <!-- Configuration bar -->
                    <div class="col-lg-4 col-md-6 my-sm-auto ms-sm-auto me-sm-0 mx-auto mt-3">
                        <!-- Button trigger modal -->
                        <button type="button" class="btn btn-primary mt-3" data-bs-toggle="modal" data-bs-target="#exampleModal">
                            Invite Member
                        </button>
                    </div>
                    <!-- End Configuration bar -->
                </div>
                <!-- End Title Info -->
                <!-- Detail Info -->
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                Username
                            </th>
                            <th>
                                Date Joined
                            </th>
                            <th>
                                Role
                            </th>
                            <th>
                                Status
                            </th>
                            <th>
                                Action
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Accounts.Items) {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Account.Username)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CreationDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Role)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Status)
                                </td>
                                <td>
                                    @if (item.Role != Domain.Enums.RoleEnum.Admin) {
                                        <form asp-page="Members" asp-page-handler="delete"
                                              onclick="return confirm('Are you sure to remove this account from group?');">
                                            <input type="hidden" name="accountId" value="@item.AccountId" />
                                            <input type="hidden" name="groupId" value="@Model.GroupObj.Id" />
                                            <button type="submit" value="Remove" class="btn btn-danger">Remove</button>
                                        </form>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                @{
                    var prevDisable = Model.Accounts.HasPrevious ? "" : "disabled";
                    var nextDisable = Model.Accounts.HasNext ? "" : "disabled";
                }
                <nav class="mt-3">
                    <ul class="pagination">
                        <li class="page-item @prevDisable">
                            <a asp-page="/Manager/Index"
                               asp-route-pageIndex="@(Model.Accounts.PageIndex - 1)"
                               class="page-link"><i class="fa-solid fa-angle-left"></i></a>
                        </li>
                        <li class="page-item @nextDisable">
                            <a asp-page="/Manager/Index"
                               asp-route-pageIndex="@(Model.Accounts.PageIndex + 1)"
                               class="page-link"><i class="fa-solid fa-angle-right"></i></a>
                        </li>
                    </ul>
                </nav>

                <!-- End Detail Info -->
            </div>
            <!-- End Main Part -->
        </div>
        <!-- End Right Part -->
    </div>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Invite a member</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post">
                    <div class="form-group">
                        <label class="control-label">Username</label>
                        <input name="username" class="form-control ps-2 border border-1" />
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <input name="groupId" type="hidden" value="@Model.GroupObj.Id" />
                        <button type="submit" value="Invite" class="btn btn-primary">Invite</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
</div>


<!--   Core JS Files   -->
<script src="~/assets/js/plugins/perfect-scrollbar.min.js"></script>
<script src="~/assets/js/plugins/smooth-scrollbar.min.js"></script>
<script>
    var myModal = document.getElementById('myModal')
    var myInput = document.getElementById('myInput')

    myModal.addEventListener('shown.bs.modal', function () {
        myInput.focus()
    })


    var win = navigator.platform.indexOf('Win') > -1;
    if (win && document.querySelector('#sidenav-scrollbar')) {
        var options = {
            damping: '0.5'
        }
        Scrollbar.init(document.querySelector('#sidenav-scrollbar'), options);
    }
</script>
<!-- Github buttons -->
<script async="" defer="" src="https://buttons.github.io/buttons.js"></script>
