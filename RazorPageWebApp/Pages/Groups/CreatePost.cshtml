@page "/groups/{groupId:guid}/create"
@using Microsoft.AspNetCore.Html;
@model RazorPageWebApp.Pages.Groups.CreatePostModel;
@{
}

<section class="row">

    <div class="col-lg-3 border border-dark rounded">
        <div class="card-img p-2 d-flex justify-content-center">
            <img class=" w-50 rounded-circle border border-2 border-dark" src="https://picsum.photos/200/200" />
        </div>
    </div>
    <div class="col-lg-9">
        <form method="post" >
            <span asp-validation-for="TextDs"></span>
            <textarea name="TextDs" id="create-post">@(new HtmlString(@Model.TextDs))</textarea>
            <button>Submit</button>
        </form>
    </div>
    @(new HtmlString(@Model.TextDs))
</section>
<script>
    tinymce.init({
        selector: '#create-post',
        icons: 'small',
        min_height: 300,
        max_height: 1000,
        toolbar_location: 'bottom',
        plugins: 'lists code table codesample link autoresize',
        toolbar: 'blocks | bold italic underline strikethrough bullist link codesample',
        resize: true,
        menubar: false,
        statusbar: false
    });
</script>